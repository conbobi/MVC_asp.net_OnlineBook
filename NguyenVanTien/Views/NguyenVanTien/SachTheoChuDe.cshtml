@model IEnumerable<NguyenVanTien.Models.SACH>

@{
    ViewBag.Title = "TRANG CHỦ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 class="text-center">Sách theo chủ đề @ViewBag.TenChuDe</h2>
<hr>

@if (!Model.Any())
{
    <p class="text-center text-danger">Không có sách thuộc chủ đề này.</p>
}
else
{
    <div class="row text-center">
        @foreach (var sach in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
                <div class="thumbnail">
                    <img src="~/Images/@sach.AnhBia" alt="@sach.TenSach" class="img-responsive img-rounded imgbook" style="width:300px;">
                    <div class="caption">
                        <h4 style="min-height:70px;">
                            <!-- Liên kết đến trang Chi tiết sách -->
                            <a href="@Url.Action("ChiTietSach", "NguyenVanTien", new { id = sach.MaSach })">@sach.TenSach</a>
                        </h4>
                        <p>
                            <a href="#" class="btn btn-primary" role="button">
                                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
